{
  "name": "xQR",
  "private": false,
  "version": "1.0.1",
  "type": "module",
  "engines": {
    "node": ">=22.5.0"
  },
  "workspaces": [
    "backend"
  ],
  "scripts": {
    "start": "npm run front & npm run server",
    "front": "vite --force --mode development",
    "server": "npm run --workspace=backend start",
    "build": "vite build --mode production && rm -rf backend/public && cp -r dist backend/public",
    "prod": "node --experimental-sqlite backend/server.js",
    "install-all": "npm install && npm install --workspace=backend"
  },
  "dependencies": {
    "@stevederico/skateboard-ui": "^1.2.1",
    "qrcode-generator": "^2.0.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.4",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.14",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "tailwindcss": "4.1.14",
    "vite": "^7.1.10"
  }
}
